<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                @if (ViewBag.Title == "Create New Person Entry")
                {
                    <p class="nav navbar-text navbar-right">@Html.ActionLink("Search for Person", "Index", "Home", new { area = "" }, new { @class = "navbar-brand", @id = "myButton" })</p>
                    <p class="nav navbar-text navbar-right">@Html.ActionLink("API Help", "Index", "Help", new { area = "" }, new { @class = "navbar-brand" })</p>
                }
                else if(ViewBag.Title == "Person Search")
                {
                    <p class="nav navbar-text navbar-right">@Html.ActionLink("Create New Person", "CreatePerson", "Home", new { area = "" }, new { @class = "navbar-brand", @id = "myButton" })</p>
                    <p class="nav navbar-text navbar-right">@Html.ActionLink("API Help", "Index", "Help", new { area = "" }, new { @class = "navbar-brand" })</p>
                }
                else
                {
                    <p class="nav navbar-text navbar-right">@Html.ActionLink("Search for Person", "Index", "Home", new { area = "" }, new { @class = "navbar-brand", @id = "myButton" })</p>
                    <p class="nav navbar-text navbar-right">@Html.ActionLink("Create New Person", "CreatePerson", "Home", new { area = "" }, new { @class = "navbar-brand", @id = "myButton" })</p>
                }
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Heatlh Catalyst App</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/myscripts")
    @RenderSection("scripts", required: false)
</body>
</html>
